<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.flo.av.chooseClothWoman"
    tools:showIn="@layout/activity_choose_cloth_woman"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringBekleidungsgrößenFrauen"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_arrowright"
        android:onClick="chooseBekleidungsgrößenFrauen"
        android:layout_marginBottom="11dp"
        android:paddingLeft="5dp"
        android:background="@drawable/menuborder"
        android:textSize="16dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringSchuheFrauen"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_arrowright"
        android:onClick="chooseSchuheFrauen"
        android:layout_marginBottom="11dp"
        android:paddingLeft="5dp"
        android:background="@drawable/menuborder"
        android:textSize="16dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringBHsInternationalFrauen"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_arrowright"
        android:onClick="chooseBHsInternationalFrauen"
        android:layout_marginBottom="11dp"
        android:paddingLeft="5dp"
        android:background="@drawable/menuborder"
        android:textSize="16dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringUnterwäscheFrauen"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_arrowright"
        android:onClick="chooseUnterwäscheFrauen"
        android:layout_marginBottom="11dp"
        android:paddingLeft="5dp"
        android:background="@drawable/menuborder"
        android:textSize="16dp"/>

</LinearLayout>
</ScrollView>
